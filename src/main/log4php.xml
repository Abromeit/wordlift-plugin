<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://logging.apache.org/log4php/">
    <appender name="default" class="LoggerAppenderFile">
        <layout class="LoggerLayoutPattern"> 
            <param name="conversionPattern" value="%d{m/d/y H:i:s,u} [%t] %p %c %x - %m%n" />
        </layout>

        <param name="append" value="true" />
        <param name="file" value="/var/log/wordlift/wordlift.log" />
        <filter class="LoggerFilterStringMatch">
            <param name="StringToMatch" value="WordPress_XmlApplication" />
            <param name="AcceptOnMatch" value="false" />
        </filter>
    </appender>

    <root>
        <level value="trace" />
       <!--  <appender_ref ref="default" /> -->
    </root>
</configuration>
